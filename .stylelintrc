{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-recommended-scss"
  ],
  "plugins": [
    "stylelint-scss"
  ],
  "rules": {
    "at-rule-no-unknown": null,
    "scss/at-rule-no-unknown": true,
    "indentation": 2,
    "value-keyword-case": [
      "lower", {
        "ignoreProperties": ["/^\\$/"]
      }
    ],
    "selector-class-pattern": "^([A-Z][a-zA-Z0-9]*)(-[A-Z][a-zA-Z0-9]+)*(_[a-z][a-zA-Z0-9]+)*$"
  }
}
